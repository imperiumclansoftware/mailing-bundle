{% extends "base.html.twig" %}

{% block body %}
	<div class="container-fluid mt-3">
		<div class="row">
			<div class="col-12">
				<div class="btn-group float-end">
					<a href="{{ path('ics-mailing-model-add') }}" class="btn btn-primary">
						<i class="fa fa-plus"></i>
						Ajouter</a>
				</div>
                <h1><i class="fa fa-list"></i> Mail modele list</h1>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<table class="table">
					<tr class="bg-dark text-light">
						<th>Title</th>
						<th>Subject</th>
                        <th>Sender</th>
                        <th>Template</th>
						<th>Variables</th>
                        <th></th>
					</tr>
					{% for modele in modeles %}
						<tr>
							<td>{{ modele.title }}</td>
							<td>{{ modele.subject }}</td>
                            <td>{{ modele.sender }}</td>
                            <td>{{ modele.template.name }}</td>
							<td>
								{% for var in modele.vars %}
									<div class="badge bg-info text-light">{{ var }}</div>
								{% endfor %}
							</td>
                            <td>
                                <div class="btn-group float-end">
                                    <a href="{{ path('ics-mailing-modele-test',{ model : modele.id}) }}" class="btn btn-secondary btn-sm"><i class="fa fa-envelope"></i></a>
									<a href="{{ path('ics-mailing-model-useredit',{model : modele.id,user: true}) }}" class="btn btn-secondary btn-sm"><i class="fa fa-user-edit"></i></a>
									<a href="{{ path('ics-mailing-model-edit',{ model : modele.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
									<a href="{{ path('ics-mailing-model-delete',{ model : modele.id}) }}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
									
                                </div>
                            </td>
						</tr>
					{% endfor %}
				</table>
			</div>
		</div>
	{% endblock %}

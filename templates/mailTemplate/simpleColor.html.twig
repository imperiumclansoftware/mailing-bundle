<style>
    .mail {
        background-color: {{bgColor|default('#000')}}
		;
		color: {{textColor|default('#fff')}}
		;
    }
	.title {
		margin: 0;
		width: 60%;
		padding: 15px;
	}

	.borderContent {
		

		margin: auto;
		width: 60%;
		padding: 15px;
	}

	.content {

		background-color: #fff;
		color: #000;
		padding: 15px;
	}

	hr {
		border-color: {{bgColor|default('#000')}}
		;
	}
</style>
<div class="mail">
	<div class="borderContent">
		<h1 class="title">
			{% if logo is defined and logo %}
				<img src="{{ path(logo) }}" width="64px;"/>
			{% endif %}
			{{ title|default('Title') }}
		</h1>
		<div class="content">
			{{ content|default('Content')|raw }}
			<hr/>
			{{ signature|default('Signature')|raw }}
		</div>
		{# <img src="{{ asset('medias/attachement_1.jpg') }}" width="600px"/> #}
		<img width="256px" src="https://cdn-elle.ladmedia.fr/var/plain_site/storage/images/people/la-vie-des-people/news/alyssa-milano-ses-revelations-glacantes-sur-son-accouchement-3970457/95687064-1-fre-FR/Alyssa-Milano-ses-revelations-glacantes-sur-son-accouchement.jpg"/>
	</div>
</div>

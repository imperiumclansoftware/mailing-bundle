{% extends "base.html.twig" %}
{% block body %}
<div class ="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1><i class="fa fa-plus"></i> Add mail modele</h1>
        </div>
    </div>
    {{  form_start(form) }}
    <div class="row">
        <div class="col-12">
            {{  form_row(form.subject) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{  form_row(form.logo) }}
        </div>
        <div class="col-6">
            {{  form_row(form.title) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{  form_row(form.content) }}
        </div>
        <div class="col-6">
            {{  form_row(form.signature) }}
        </div>
    </div>
    {{  form_end(form) }}
</div>
{% endblock %}

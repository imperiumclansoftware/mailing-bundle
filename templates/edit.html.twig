{% extends "base.html.twig" %}
{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<h1>
					<i class="fa fa-plus"></i>
					Add mail modele</h1>
			</div>
		</div>
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link active" data-bs-toggle="tab" data-bs-target="#base">Base config</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" data-bs-toggle="tab" data-bs-target="#html">HTML Format</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" data-bs-toggle="tab" data-bs-target="#text">Text Format</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" data-bs-toggle="tab" data-bs-target="#options">Options</a>
			</li>
		</ul>
		{{  form_start(form) }}
		<div class="tab-content">
			<div class="tab-pane fade show active" id="base" role="tabpanel">
				<div class="row">
					<div class="col-6">
						{{  form_row(form.template) }}
					</div>
					<div class="col-6">
						{{  form_row(form.subject) }}
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						{{  form_row(form.sender) }}
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						{{  form_row(form.logo) }}
					</div>
				</div>
			</div>
			<div class="tab-pane fade" id="html" role="tabpanel">
				<div class="row">
					<div class="col-12">
						{{  form_row(form.title) }}
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						{{  form_row(form.content) }}
					</div>
					<div class="col-12">
						{{  form_row(form.signature) }}
					</div>
				</div>
			</div>
			<div class="tab-pane fade" id="text" role="tabpanel">
				<div class="row">
					<div class="col-12">
						{{  form_row(form.text)}}
					</div>
				</div>
			</div>
			<div class="tab-pane fade" id="options" role="tabpanel">
				<div class="row">
					<div class="col-6">
						{{ form_row(form.priority) }}
					</div>
					<div class="col-6">
						{{ form_row(form.replyTo) }}
					</div>
				</div>
			</div>
		</div>


		<div class="row">
			<div class="col-12 text-center">
				<button class="btn btn-success" type="submit">
					<i class="fa fa-save"></i>
					Record</button>
			</div>
		</div>
		{{  form_end(form) }}
	</div>
{% endblock %}
